{
  "stage": 0,
  "optional": ["es7.decorators"],
  "env": {
    "development": {
      "plugins": [
        "react-transform",
        "react-autoprefix"
      ],
      "extra": {
        "react-transform": {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }, {
            "transform": "react-transform-catch-errors",
            "imports": ["react", "redbox-react"]
          }]
        }
      }
    }
  }
}
